<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smsguard"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
         android:configChanges="orientation|screenSize"
        android:icon="@drawable/ic_launcher" >
        <activity
            android:name="com.example.smsguard.activity.CoverActivity"
            android:label="@string/app_name"
            android:theme="@style/AppCover" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.smsguard.activity.LoginActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.smsguard.TabSample"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.smsguard.activity.MainActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.smsguard.activity.ChatActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.smsguard.activity.ComposeActvity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.smsguard.activity.AboutActivity"
            android:label="@string/AboutTitle"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.smsguard.activity.ContactActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.smsguard.activity.ActivationActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.smsguard.activity.SettingsActivity"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>